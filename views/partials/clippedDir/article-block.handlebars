
    <div class="resultsBG col-5">
      <div class="row">
        <div class="col-12 col-sm-12 col-md-12 col-lg-12 col-xl-12">
          <h1 class="cardTitle">{{title}}</h1>
        </div>
      </div>
      <div class="row">
        <div class="col-12 col-sm-4 col-md-4 col-lg-4 col-xl-4">
          <img class="clippedImg" src="{{img}}">
        </div>
        <div class="col-12 col-sm-8 col-md-8 col-lg-8 col-xl-8">
          <p class="cardText">
            {{description}}
          </p>
          <a class="cardLink btnGrp btn btn-success" target="_blank" href="{{link}}">DIRECT LINK</a>
          <button type="button" class="btnGrp btn btn-success saveBtn" data-id="{{_id}}">SAVE</button>
          <button type="button" class="btnGrp btn btn-success deleteBtn" data-id="{{_id}}">DELETE</button>
        </div>
      </div>
    </div>
   



