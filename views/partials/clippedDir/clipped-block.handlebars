<div class="contain-fluid">
  <div class="row">
    <div class="col-12">
      <div class="row">
        <div class="col-12">
          <h2>{{title}}</h2>
        </div>
      </div>
      <div class="row">
        <div class="col-3">
          <img class="clippedImg" src="{{image}}">
        </div>
        <div class="col-6">
          <p>
            {{description}}
          </p>
          <a href="{{link}}">Click here for more!</a>
        </div>
        <div class="col-3">
          <div class="row">
            <button class="noteBtn" data-id="{{_id}}">Add A Note</button>
          </div>
          <div class="row">
            <button class="deleteBtn" data-id="{{_id}}">DELETE</button>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>


